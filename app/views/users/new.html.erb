<div class="background" ><p class="title">Sign Up</p>

<% if flash[:errors] %>
    <%= flash[:errors].each do |error| %>
        <%= error %>
    <% end %>
<% end %>

<%= form_for(@user) do |f| %>
    <%= f.text_field :name, placeholder: "username" %>
    <%= f.password_field :password, placeholder: "password" %>
    <%= f.submit "Get Started"%>
<% end %><br>
<div class="button"><form method="get" action="/" controller="application">
    <input value="Go Back" type="submit" />
</form></div>

</div>