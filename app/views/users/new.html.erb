<h1>Sign Up</h1>

<% if flash[:errors] %>
    <%= flash[:errors].each do |error| %>
        <%= error %>
    <% end %>
<% end %>

<%= form_for(@user) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :password %>
    <%= f.text_field :password %>
    <%= f.submit %>
<% end %>