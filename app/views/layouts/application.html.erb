<!DOCTYPE html>
<html>
  <head>
    <title>RaceFlip</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <nav class="navbar navbar-light bg-light">
    User: <% if @user %>
            <%= @user.name %>
            (<%= @user.id %>)
            Balance: $<%= number_with_delimiter(@user.balance, delimiter: ",") %>
          <% else %>
            <%= "no user" %>
          <% end %>
    <a class="navbar-brand" href="/race">Race</a>
    <a class="navbar-brand" href="/garage">Garage</a>
    <a class="navbar-brand" href="/dealer">Dealer</a>
    <a class="navbar-brand" href="/leaderboards">Leaderboards</a>
    <a class="navbar-brand" href="/logout">Log Out</a>
    </nav>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
