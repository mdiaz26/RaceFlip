<div class="background" ><p class="title">Login Page</p>

<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <%= error %>
    <% end %>
<% end %>

<%= form_tag '/login' do %>
<%= text_field_tag :name, nil, placeholder: "username" %>
<%= password_field_tag :password, nil, placeholder: "password" %>
<%= submit_tag "log in" %>
<% end %><br>
<div class="button"><form method="get" action="/">
    <input value="Go Back" type="submit" />
</form></div>

</div>